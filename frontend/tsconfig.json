{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"lib": [
			"ESNext",
			"dom"
		],
		"jsx": "react-jsx",
		"noEmit": true,
		"sourceMap": true,
		/* Strict Type-Checking Options */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		/* Module Resolution Options */
		"moduleResolution": "node",
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"incremental": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"baseUrl": "./src/",
		"paths": {
			"@/common/*": [
				"Components/Common/*"
			],
			"@/screens/*": [
				"Components/Screens/*"
			],
			"@/ui/*": [
				"Components/Common/UI/*"
			],
			"@/assets/*": [
				"Assets/*"
			],
			"@/hooks/*": [
				"Hooks/*"
			],
			"@/services/*": [
				"Services/*"
			],
			"@/shared/*": [
				"Shared/*"
			],
			"@/store/*": [
				"Store/*"
			],
			"@/utils/*": [
				"Utils/*"
			],
			"@/providers/*": [
				"Providers/*"
			]
		}
	},
	"include": [
		"src",
		"global.d.ts"
	]
}
